<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/roomservice_des"
        android:layout_width="0dp"
        android:layout_height="@dimen/layx66"
        android:layout_marginLeft="@dimen/layx30"
        android:layout_marginRight="@dimen/layx10"
        android:layout_weight="4.5"
        android:ellipsize="marquee"
        android:gravity="center_vertical|left"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/layx17" />

    <TextView
        android:id="@+id/roomservice_click_cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/layx66"
        android:layout_marginRight="@dimen/layx30"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:gravity="center_vertical|right"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/click_cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/layx17" />

</LinearLayout>