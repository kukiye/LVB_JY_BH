<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/setting_content_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layx50" >

    <TextView
        android:id="@+id/pair_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/interactive_seeting"
        android:textColor="@color/white"
        android:textSize="@dimen/layx35" />

    <EditText
        android:id="@+id/interactive_passwd_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:hint="@string/wifi_passwd_input_tips"
        android:inputType="number"
        android:nextFocusDown="@+id/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/layx30" />

    <EditText
        android:id="@+id/interactive_serverip_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:hint="@string/server_ip_input_please"
        android:nextFocusDown="@+id/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/layx30" />

    <LinearLayout
        android:id="@+id/pair_controller_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/pair_controller_container_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pair_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layx80"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/layx25" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pair_controller_container_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pair_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layx80"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/layx25" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>