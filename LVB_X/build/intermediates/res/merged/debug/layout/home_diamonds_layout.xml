<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/vod_item_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >

    <Button
        android:id="@+id/item_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_item_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_logo"
            android:layout_width="@dimen/layx130"
            android:layout_height="@dimen/layx80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layx20"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layx30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layx15"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/layx22"
            />
    </LinearLayout>

</RelativeLayout>