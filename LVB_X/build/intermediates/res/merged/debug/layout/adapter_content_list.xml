<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layy66"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    
    <ImageView 
        android:layout_width="@dimen/layx23"
        android:layout_height="@dimen/layy20"
        android:layout_marginLeft="@dimen/layx25"
        android:layout_marginRight="@dimen/layx20"
        android:src="@drawable/prison_news_icon"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/layy28" />
    
    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layy52"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/layx50"
        android:layout_marginRight="@dimen/layx30"
        android:textStyle="bold"
        android:textSize="@dimen/layy28" />

</LinearLayout>