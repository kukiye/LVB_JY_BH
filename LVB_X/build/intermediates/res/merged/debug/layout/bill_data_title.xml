<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/bill_tag"
        android:layout_width="@dimen/layx50"
        android:layout_height="@dimen/layx50"
        android:layout_marginLeft="@dimen/layx50"
        android:layout_marginRight="@dimen/layx50"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bill_tag" />

    <TextView
        android:id="@+id/bill_type"
        android:layout_width="0dp"
        android:layout_height="@dimen/layx45"
        android:layout_marginBottom="@dimen/layx10"
        android:layout_marginTop="@dimen/layx10"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/layx20" />

    <TextView
        android:id="@+id/bill_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/layx45"
        android:layout_marginBottom="@dimen/layx10"
        android:layout_marginTop="@dimen/layx10"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/layx20" />

    <TextView
        android:id="@+id/bill_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/layx45"
        android:layout_marginBottom="@dimen/layx10"
        android:layout_marginTop="@dimen/layx10"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/layx20" />

    <TextView
        android:id="@+id/bill_time"
        android:layout_width="0dp"
        android:layout_height="@dimen/layx45"
        android:layout_marginBottom="@dimen/layx10"
        android:layout_marginTop="@dimen/layx10"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/layx20" />

</LinearLayout>