<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item__view_container"
                android:layout_width="@dimen/layx236"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/layx25"
                android:layout_marginRight="@dimen/layx25"
    >

    <Button
        android:id="@+id/item_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_item_selector"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/layx130"
            android:layout_height="@dimen/layx85"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layx10"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/layx10"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/main_text_bule"
            android:textSize="@dimen/layx20"/>
    </LinearLayout>

</RelativeLayout>