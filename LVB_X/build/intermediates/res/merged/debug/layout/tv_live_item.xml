<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_right_news_item_bg"
    >

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layx50"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/layx25"
            android:layout_height="@dimen/layx25"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layx20"
            android:scaleType="center"
            android:background="@drawable/tv_item_ball"
            />


        <TextView
            android:id="@+id/tv_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layx30"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:text="CCTV 1"
            android:textColor="@color/gray"
            android:textSize="@dimen/layx20"/>
    </LinearLayout>
</RelativeLayout>