<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/backtips_content"
        android:layout_width="@dimen/layx1000"
        android:layout_height="@dimen/layx600"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg" >

        <TextView
            android:id="@+id/feedbak_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layx20"
            android:gravity="center"
            android:text="@string/clause"
            android:textColor="@color/white"
            android:textSize="@dimen/layx30" />

        <WebView
            android:id="@+id/clause_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/feedbak_title"
            android:layout_margin="@dimen/layx20" />
    </RelativeLayout>

</RelativeLayout>