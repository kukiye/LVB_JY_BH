<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/layx20" >

    <RelativeLayout
        android:id="@+id/orentaion_container_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/layx20"
        android:layout_weight="1.2"
        android:padding="@dimen/layx30" >

        <TextView
            android:id="@+id/rc_action_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rc_contronller_tips"
            android:textColor="@color/white"
            android:textSize="@dimen/layx40"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layx1"
            android:layout_below="@id/rc_action_tips"
            android:layout_marginBottom="@dimen/layx5"
            android:layout_marginTop="@dimen/layx5"
            android:background="@drawable/horizontal_line"
            android:contentDescription="@string/app_name" />

        <Button
            android:id="@+id/seat_select"
            android:layout_width="@dimen/layx100"
            android:layout_height="match_parent"
            android:layout_above="@id/horizontal_line"
            android:layout_alignParentRight="true"
            android:background="@drawable/hsjq_seat_selector" />

        <LinearLayout
            android:id="@+id/orentation_container_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/horizontal_line"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/orentation_line_one_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/rc_volume_down_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_volume_down"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_volume_down_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rc_arrow_up_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_arrow_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_arrow_up_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rc_volume_up_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_volume_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_volume_up_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orentation_line_two_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/rc_arrow_left_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_arrow_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_arrow_left_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rc_ok_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_ok"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_ok_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rc_arrow_right_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_arrow_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_arrow_right_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orentation_line_third_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/rc_menu_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_menu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_menu_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rc_arrow_down_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_arrow_down"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_arrow_down_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rc_volume_mute_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/rc_volume_mute"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rc_volume_mute_selector" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/number_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layx20"
        android:layout_weight="1"
        android:background="@drawable/rc_number_n"
        android:orientation="vertical"
        android:padding="@dimen/layx20" >

        <LinearLayout
            android:id="@+id/number_line_first_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/rc_delete_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_delete_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_logo_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/rc_logo"
                    android:layout_width="@dimen/layx112"
                    android:layout_height="@dimen/layx49"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_back_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_back_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_line_seconde_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/rc_digital_one_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_one_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_two_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_two_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_three_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_three_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_line_third_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/rc_digital_four_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_four_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_five_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_five_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_six_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_six_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_line_fourth_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/rc_digital_seven_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_seven_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_eight_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_eight_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_nine_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_nine_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_line_fivth_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/rc_digital_star_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_star"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_tag_star_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_zero_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_zero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_digital_zero_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_digital_pound_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rc_digital_pound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rc_tag_pound_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>