<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layx170"
                android:background="@drawable/mainpage_blue_bg"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/layx100"
            android:layout_height="@dimen/layx100"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layx25"
            android:background="@drawable/mainpage_title_logo"
            android:scaleType="center"/>

        <LinearLayout
            android:layout_width="@dimen/layx560"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layx10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_title_ch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layx30"
                android:background="@drawable/mainpage_title_text_ch"
                android:scaleType="center"
                />

            <ImageView
                android:id="@+id/iv_title_en"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layx18"
                android:layout_marginTop="@dimen/layx10"
                android:background="@drawable/mainpage_title_text_en"
                android:scaleType="center"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/layx100"
            android:layout_height="@dimen/layx110"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layx90"
            android:background="@drawable/biaoliruyi"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layx100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mainmenu_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/layx16"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/mainmenu_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layx10"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/layx16"
                    android:textStyle="bold"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/mainmenu_chinese_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layx10"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/layx16"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/mainmenu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layx6"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/layx33"
                android:textStyle="italic"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layx25"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/base_weath_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/layx25"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/base_weath_icon"
                android:layout_width="@dimen/layx40"
                android:layout_height="@dimen/layy40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/layx10"
                android:layout_marginRight="@dimen/layx10"
                />

            <TextView
                android:id="@+id/base_weath_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layx5"
                android:textColor="@color/white"
                android:textSize="@dimen/layx25"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>